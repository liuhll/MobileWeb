@model Jueci.MobileWeb.Lottery.Models.Transfer.NewLottery

<div data-role="content" class="header-background">
    <img src="~/images/icon/sj1.png" alt="sj1" />
    <span class="font-info">@Html.Raw(Model.CurrentPeriodDisplay)</span>
    <div style="margin-top: 10px">
        @foreach (var item in Model.LotteryResult)
        {
            <span class="number-circle number-circle-normal" style="margin: 0 5px">@Html.Raw(item)</span>
        }
      
    </div>
    <div class="countdown-content">
        <img class="countdown-img fl" src="~/images/icon/clock@2x.png" alt="sj2" />
        <span class="font-info countdown-title fl">@Html.Raw(Model.NextPeriodDisplay)</span>
        <div class="countdown-number-content">
            <div class="countdown-number fl">0</div>
            <div class="countdown-number fl">1</div>
            <div class="fl">:</div>
            <div class="countdown-number fl">2</div>
            <div class="countdown-number fl">3</div>

        </div>
        <div class="clearfix"></div>
    </div>
</div>
