@{
    ViewBag.HeadTitle = "计划详情";
    ViewBag.Title = "计划详情";
    int currentTabIndex = ViewBag.TabIndex;
}
@using Jueci.MobileWeb.Web.Views
@model IList<Jueci.MobileWeb.Lottery.Models.Transfer.UserPlanDetail>

@section styles{
    <link href="~/Content/ssc/slide-tabs.css" rel="stylesheet"/>
    <link href="~/Content/ssc/layout.css" rel="stylesheet" />
}

@section scripts
{
    <script src="~/Scripts/jueci/slide-tabs.js" type="text/javascript"></script>
    <script src="~/Scripts/jueci/clock.js" type="text/javascript"></script>
    @if (BrowerChecker.IsMoblie(Request))
    {
        <script src="~/Scripts/jueci/swipe-panel.js" type="text/javascript"></script>
    }    
    <script src="~/Scripts/jueci/user-plandetail-clock.js" type="text/javascript"></script>
}

<div data-role="tabs" data-fullscreen="true">
    @Html.Hidden("PlanId", (string)ViewBag.PlanId)
    @Html.Hidden("CurrentTabIndex", (int)ViewBag.TabIndex)
    <div class="find_nav">
        <div class="find_nav_left">
            <div @*data-role="navbar"data-theme="a"*@ class="find_nav_list">
                <ul>
                    @Html.Partial("_UserPlanDetailTabs", Model)
                </ul>
            </div>
        </div>
    </div>
    @Html.Partial("_UserPlanDetailContent", Model)
</div>

